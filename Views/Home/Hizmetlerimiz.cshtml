@model IEnumerable<KurumsalWeb.Models.Model.Hizmet>
@{
    ViewBag.Title = "Hizmetlerimiz";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}
@section Styles {
    <style>
        /* Sabit boyutlu panel */
        .fixed-size-panel {
            height: 250px; /* Sabit yükseklik */
            display: flex;
            flex-direction: column; /* İçeriği dikey olarak hizalar */
            overflow: hidden; /* İçeriğin taşmaması için */
        }

            .fixed-size-panel .panel-body {
                flex-grow: 1; /* Bu alan kalan boşluğu alacak şekilde büyür */
                overflow: hidden; /* Görselin taşmasını engeller */
                text-align: center; /* Görselin ortalanması için */
            }

            .fixed-size-panel img {
                max-width: 100%;
                max-height: 100%;
                object-fit: cover; /* Görselin panelin içine sığmasını sağlar */
            }

            .fixed-size-panel .panel-footer {
                height: 50px; /* Alt kısım için sabit bir yükseklik */
                text-align: center; /* Başlık ortalanır */
                color: black;
                font-weight: bold;
            }
    </style>
}
<section id="content">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <!-- Sabit Boyutlu Panel -->
                        <a href="@Url.Action("HizmetDetay", "Home",new{id = item.HizmetId })">
                            <div class="col-md-4">
                                <div class="panel panel-default fixed-size-panel">
                                    <div class="panel-body">
                                        <img src="@item.ResimURL" alt="@item.Aciklama">
                                    </div>
                                    <div class="panel-footer">@item.Baslik</div>
                                </div>
                            </div>
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</section>

