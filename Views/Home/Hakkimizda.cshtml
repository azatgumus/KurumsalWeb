@model KurumsalWeb.Models.Model.Hakkimizda
@{
    ViewBag.Title = "Hakkımızda";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}
<div class="container">
   
    <br/>
    <div class="row">
        <div class="col-md-6">
            <img src="@Model.ResimURL" alt="" class="align-center img-box img-responsive" />
        </div>
        <div class="col-md-6">
            <h4>Hakkımızda</h4>
            <p>
                @if (Model.Aciklama != null)
                {
                    @Html.Raw(Model.Aciklama)
                }
            </p>
        </div>
    </div>
</div>


