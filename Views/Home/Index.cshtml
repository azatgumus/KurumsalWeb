
@{
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
    ViewBag.Title = "Anasayfa";
}

@section Styles {
    <style>
        /* Sabit boyutlu panel */
        .fixed-size-panel {
            height: 250px; /* Sabit yükseklik */
            display: flex;
            flex-direction: column; /* İçeriği dikey olarak hizalar */
            overflow: hidden; /* İçeriğin taşmaması için */
        }

            .fixed-size-panel .panel-body {
                flex-grow: 1; /* Bu alan kalan boşluğu alacak şekilde büyür */
                overflow: hidden; /* Görselin taşmasını engeller */
                text-align: center; /* Görselin ortalanması için */
            }

            .fixed-size-panel img {
                max-width: 100%;
                max-height: 100%;
                object-fit: cover; /* Görselin panelin içine sığmasını sağlar */
            }

            .fixed-size-panel .panel-footer {
                height: 50px; /* Alt kısım için sabit bir yükseklik */
                text-align: center; /* Başlık ortalanır */
                color: black;
                font-weight: bold;
            }
    </style>
}

<section id="featured">
    <!-- start slider -->
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <!-- Slider -->
                @{
                    Html.RenderAction("SliderPartial", "Home");
                }
                <!-- end slider -->
            </div>
        </div>
    </div>
</section>
<section class="callaction">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="big-cta">
                    <div class="cta-text">

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<section id="content">
    <div class="container">
       
        <!-- divider -->
        <div class="row">
            <div class="col-lg-12">
                <div class="solidline">
                </div>
            </div>
        </div>
        <!-- end divider -->
        <!-- Portfolio Projects -->
        <div class="row">

            <div class="col-lg-12">
                <h4 class="heading">Hizmetlerimiz</h4>
                <div class="row">
                    @foreach (var item in ViewBag.Hizmetler)
                    {
                        <!-- Sabit Boyutlu Panel -->
                        <a href="@Url.Action("HizmetDetay", "Home",new{id = item.HizmetId })">
                            <div class="col-md-4">
                                <div class="panel panel-default fixed-size-panel">
                                    <div class="panel-body">
                                        <img src="@item.ResimURL" alt="@item.Aciklama">
                                    </div>
                                    <div class="panel-footer">@item.Baslik</div>
                                </div>
                            </div>
                        </a>
                    }
                </div>

            </div>

        </div>
    </div>
</section>

